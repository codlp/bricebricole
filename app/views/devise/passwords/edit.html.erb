<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirm your new password",
                required: true,
                input_html: { autocomplete: "new-password" } %>
                <%= f.input :prenom, required: true %>

    <%=f.input :nom_societe, required: true %>

    <%=f.input :numero_siret, required: true %>

    <%=f.input :numero_tva, required: true %>

    <%=f.input :adresse %>

    <%=f.input :jours_travail %>

    <%= f.input :heure_debut_travail  %>

    <%= f.input :heure_fin_travail %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
