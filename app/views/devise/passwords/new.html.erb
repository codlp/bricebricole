<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
                <%= f.input :prenom, required: true %>

    <%=f.input :nom_societe, required: true %>

    <%=f.input :numero_siret, required: true %>

    <%=f.input :numero_tva, required: true %>

    <%=f.input :adresse %>

    <%=f.input :jours_travail %>

    <%= f.input :heure_debut_travail  %>

    <%= f.input :heure_fin_travail %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
